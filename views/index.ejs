<%- include('./partials/head') %>

<article>
  <header>
    <a href="https://github.com/<%= member.gitHubHandle %>"><h1><%= member.prefix %> <%= member.name %> <%= member.surname %></h1></a>
    <p><em>AKA <%= member.nickname %></em></p>
    <p><em>Frontend Developer</em></p>
  </header>

  <a href="<%= member.website %>"><img src="<%= member.avatar %>" alt="Creative Coder"></a>

  <dl>
    <dt>19 jaar</dt>
    <dd>Leeftijd</dd>
    <dt>IJmuiden</dt>
    <dd>Woonplaats</dd>
    <dt>CSS, HTML, JS</dt>
    <dd>Skills</dd>
  </dl>

  <div class="slideshow-container">

    <div class="mySlides active">
      <div class="info">
        <img src="./assets/skills.png" alt="" class="infoimg">
        <div class="slide-container">
          <p class="slide-container--title">Skills</p>
          <p class="slide-container--text"><%= member.bio.html %></p>
        </div>
      </div>
    </div>

    <div class="mySlides">
      <div class="info">
        <img src="./assets/hobby.jpg" alt="" class="infoimg">
        <div class="tekst">
          <p class="author">Hobbies</p>
          <p class="txtslide">Mijn hobbies zijn vooral Basketbal en uitgaan & gamen met vrienden.</p>
          
        </div>
      </div>
    </div>

    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <a class="next" onclick="plusSlides(1)">❯</a>

  </div>
</article>

<script src="./scripts/script.js"></script>

<%- include('./partials/foot') %>